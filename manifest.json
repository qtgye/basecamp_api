{
  "manifest_version": 2,

  "name": "Basecamp API",
  "description": "This extension allows Basecamp API calls",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Basecamp API"
  },
  "permissions" : [
    "background",
    "storage",
  	"https://*/",
    "https://gobeyondstudios.basecamphq.com/"
  ],
  "background" : {
    "page": "background.html"
  },
  "options_page": "options.html",
  "content_security_policy":"script-src 'self' https://gobeyondstudios.basecamphq.com; object-src 'self'"
}